                },
                "columns": [
                    { "data": "FirstName" },
                    { "data": "LastName" },
                    { "data": "ContactNumber" },
                    { "data": "Email" },
                    { "data": "Address" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' style='cursor:pointer' onclick=PopupForm('@Url.Action("AddOrEdit", "EmployeesjQuery")/" + data + "')><i class='fa fa-pencil'></i></a>"
                        },

                        "orderable": false,
                        "searchable": false
                    },
                     {
                        "data": "Id", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' style='cursor:pointer' onclick=Delete(" + data + ")><i class='fa fa-trash'></i></a>"
                        },

                        "orderable": false,
                        "searchable": false
                    }

                ],
                "language": {
                    "emptyTable": "No data found."
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Employee Details',
                        height: 500,
                        width: 350,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                }
            });
                }
            return false;
        }

        function Delete(id) {
            if (confirm('Are you sure you want to delete this employee?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "EmployeesjQuery")/' + id,
                    success: function (data) {
                        if (data.success) {
                                dataTable.ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                        }
                    }
                });
            }
        }


    </Script>
}

