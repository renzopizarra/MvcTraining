@model IEnumerable<DemoApp.WebMvc.Models.ModelEmployeeMvc>
@{
    ViewBag.Title = "Slickgrid";
}

<h2>Slickgrid</h2>
<br />
<div>
    <p>
        <a style="color:white" class="btn btn-success btn-sm" onclick="PopupForm('@Url.Action("AddOrEdit","EmployeesSlickGrids")')">
            <i class="fa fa-plus-square"></i> Add New
        </a>
    </p>
</div>

<a class="btn btn-default btn-sm" onclick="PopupForm(url + "AddOrEdit")">Button test</a>

<div style="width:100%;">
    <div class="grid-header" style="width:100%">
        <label>SlickGrid</label>
    </div>
    <div id="myGrid" style="width:100%;height:500px;"></div>
    <div id="pager" style="width:100%;height:20px;"></div>
</div>

@*<div id="myGrid" style="width:100%;height:500px"></div>
