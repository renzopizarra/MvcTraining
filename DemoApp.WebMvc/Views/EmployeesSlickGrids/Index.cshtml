<style>
    .cell-title {
        font-weight: bold;
    }

    .cell-effort-driven {
        text-align: center;
    }

    .cell-selection {
        border-right-color: silver;
        border-right-style: solid;
        background: #f5f5f5;
        color: gray;
        text-align: right;
        font-size: 10px;
    }

    .slickgrid-cell-reorder {
        cursor: move;
        background: url("../images/drag-handle.png") no-repeat center center;
    }
</style>
